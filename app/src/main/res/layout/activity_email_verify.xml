<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:id="@+id/txt_emial_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Verification"
            android:textSize="18sp"
            android:textColor="#616161"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_margin="15dp"
            android:id="@+id/img_sms"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/email_verify_icon"
            android:layout_below="@id/txt_emial_verification"/>
        <TextView
            android:id="@+id/txt_emailenter_the_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the verification code"
            android:layout_below="@id/img_sms"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="#616161"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We just sent you to your phone number"
            android:layout_below="@id/txt_emailenter_the_verification_code"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="#616161"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ECEFF1">

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:id="@+id/txt_ruler11"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="_"/>
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/txt_ruler22"
            android:layout_toRightOf="@+id/txt_ruler11"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="_"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txt_ruler22"
            android:id="@+id/txt_ruler33"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="_"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:text="_"
            android:layout_toRightOf="@id/txt_ruler33"/>
        <Button
            android:id="@+id/btt_emailconfirm"
            android:paddingRight="130dp"
            android:paddingLeft="130dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/conner"
            android:text="Confirm"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/btt_emailconfirm">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/txt_emaildont_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't get the code?"
                android:layout_below="@id/btt_emailconfirm"/>

            <TextView
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/txt_dont_get_code"
                android:layout_below="@+id/btt_emailconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend code"
                android:textColor="#0277BD"
                android:id="@+id/txt_emailresend_code"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
